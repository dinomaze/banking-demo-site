{
    "compilerOptions": {
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2020",
        "strict": true,
        "noImplicitAny": false,
        "module": "CommonJS",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "outDir": "dist",
        "skipLibCheck": true
    },
    "include": ["src/**/*"]
}
